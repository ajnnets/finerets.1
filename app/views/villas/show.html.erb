<%- model_class = Villa -%>
<div class="page-header">
  <h1><%=t '.title', :default => Villa %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @villa.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @villa.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:guest_count) %></dt>
      <dd><pre class="prettyprint"><%= @villa.guest_count %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:bedroom_count) %></dt>
      <dd><pre class="prettyprint"><%= @villa.bedroom_count %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:villa_detail_heading) %></dt>
      <dd><pre class="prettyprint"><%= @villa.villa_detail_heading %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:love_points_heading) %></dt>
      <dd><pre class="prettyprint"><%= @villa.love_points_heading %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:villa_rates_heading) %></dt>
      <dd><pre class="prettyprint"><%= @villa.villa_rates_heading %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:need_to_know_heading) %></dt>
      <dd><pre class="prettyprint"><%= @villa.need_to_know_heading %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:feature_and_facility_heading) %></dt>
      <dd><pre class="prettyprint"><%= @villa.feature_and_facility_heading %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:similar_villas) %></dt>
      <dd><pre class="prettyprint"><%= @villa.similar_villas %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:published) %></dt>
      <dd><pre class="prettyprint"><%= @villa.published %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              villas_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_villa_path(@villa), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              villa_path(@villa),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

