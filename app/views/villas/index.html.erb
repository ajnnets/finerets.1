<%- model_class = Villa -%>
<div class="page-header">
  <h1><%=t '.title', :default => Villa %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:guest_count) %></th>
      <th><%= model_class.human_attribute_name(:bedroom_count) %></th>
      <th><%= model_class.human_attribute_name(:villa_detail_heading) %></th>
      <th><%= model_class.human_attribute_name(:love_points_heading) %></th>
      <th><%= model_class.human_attribute_name(:villa_rates_heading) %></th>
      <th><%= model_class.human_attribute_name(:need_to_know_heading) %></th>
      <th><%= model_class.human_attribute_name(:feature_and_facility_heading) %></th>
      <th><%= model_class.human_attribute_name(:similar_villas) %></th>
      <th><%= model_class.human_attribute_name(:published) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @villas.each do |villa| %>
      <tr>
        <td><%= villa.id %></td>
        <td><%= villa.name %></td>
        <td><%= villa.description %></td>
        <td><%= villa.guest_count %></td>
        <td><%= villa.bedroom_count %></td>
        <td><%= villa.villa_detail_heading %></td>
        <td><%= villa.love_points_heading %></td>
        <td><%= villa.villa_rates_heading %></td>
        <td><%= villa.need_to_know_heading %></td>
        <td><%= villa.feature_and_facility_heading %></td>
        <td><%= villa.similar_villas %></td>
        <td><%= villa.published %></td>
        <td><%=l villa.created_at, format: :long %></td>
        <td>
          <%= link_to villa_path(villa), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to villa_path(villa), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_villa_path,
            :class => 'btn btn-primary' %>
